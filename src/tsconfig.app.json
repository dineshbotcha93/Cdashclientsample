{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "es2016",
    "module":"es2015",
    "baseUrl": "",
    "types": ["jasmine","node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "e2e/*.spec.ts"
  ]
}
